@model JobbyGarden.Models.Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutpanel.cshtml";
}
<section class="content" style="height:auto">
    <div class="container-fluid">
        <h2>Edit</h2>

        <h4>Blog</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdesc1" class="control-label"></label>
                        <input asp-for="Blogdesc1" class="form-control" />
                        <span asp-validation-for="Blogdesc1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdesc2" class="control-label"></label>
                        <input asp-for="Blogdesc2" class="form-control" />
                        <span asp-validation-for="Blogdesc2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogcategoryId" class="control-label"></label>
                        <select asp-for="BlogcategoryId" class="form-control" asp-items="ViewBag.BlogcategoryId"></select>
                        <span asp-validation-for="BlogcategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        </div>
    </section>
