@model IEnumerable<JobbyGarden.Models.Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutpanel.cshtml";
}
<section class="content" style="height:auto">
    <div class="container-fluid">
        <h2>Index</h2>

        <p>
            <a class="btn btn-success btn-lg" style="margin:20px 0" asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blogdesc1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blogdesc2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.blogCategory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Blogdesc1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Blogdesc2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.blogCategory.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Fullname)
                        </td>
                        <td>
                            <a class="btn btn-warning btn-lg" style="margin:20px 0" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-info btn-lg" style="margin:20px 0" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger btn-lg" style="margin:20px 0" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
</section>