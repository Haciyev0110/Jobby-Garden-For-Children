@model IEnumerable<JobbyGarden.Models.Classroomm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutpanel.cshtml";
}
<<section class="content" style="height:auto">
    <div class="container-fluid">

        <h2>Index</h2>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Iamgename)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Size)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Openhourse)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Closehours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Startime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Teacher)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Agee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <img src="~/Librarry/Class/@item.Iamgename" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Size)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Openhourse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Closehours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Startime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Teacher.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Agee.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td style="width:15%">
                            <a class="btn btn-warning btn-lg" style="margin:20px 0" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-info btn-lg" style="margin:20px 0" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger btn-lg" style="margin:20px 0" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
</section>