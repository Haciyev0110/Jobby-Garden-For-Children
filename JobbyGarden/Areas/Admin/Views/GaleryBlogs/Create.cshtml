@model JobbyGarden.Models.GaleryBlog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutpanel.cshtml";
}
<section class="content" style="height:auto">
    <div class="container-fluid">
        <h2>Create</h2>

        <h4>GaleryBlog</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" id="product-wrapper-1">
                        <label asp-for="ImageBlog" class="control-label"></label>
                        <input type="file" asp-for="ImageBlog" class="form-control" />
                        <span asp-validation-for="ImageBlog" class="text-danger"></span>
                        <button style="border-radius: 100%; width: 40px; height: 40px; margin-top: 34px;padding:0" class="add_field-1 btn btn-primary"><i class="fa fa-plus"></i></button>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogId" class="control-label"></label>
                        <select asp-for="BlogId" class="form-control" asp-items="ViewBag.BlogId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</section>

@section Loginscript{
    <script>
        var p = document.querySelector(".form-control");
        var p_prime = p.cloneNode(true);
        $(document).ready(function (e) {
            var max_fields = 10;
            var wrapper = $("#product-wrapper-1");
            var add_button = $(".add_field-1");
            var y = 1;

            $(add_button).click(function (e) {

                e.preventDefault();
                if (y < max_fields) {
                    y++;

                    $(wrapper).append(`

<div class="form-group row ">

          <p><b>Galeriya :</b></p>
              
                        <label asp-for="ImageBlog" class="control-label"></label>
                        <input type="file" asp-for="ImageBlog" name="ImageBlog" class="form-control" />
                        <span asp-validation-for="ImageBlog" class="text-danger"></span>



<div class="clearfix"></div>
<a href="#" style="color: red;" class="remove_sponsor_field-1">Sil</a>
</div>
<div class="clearfix"></div>
`);
                }
            });
            $(wrapper).on("click", ".remove_sponsor_field-1", function (e) {
                e.preventDefault(); $(this).parent('div').remove(); y--;
            })
        });

    </script>
}
