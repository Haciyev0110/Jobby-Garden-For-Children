@model JobbyGarden.Models.GaleryBlog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutpanel.cshtml";
}
<<section class="content" style="height:auto">
    <div class="container-fluid">
        <h2>Edit</h2>

        <h4>GaleryBlog</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="ImageBlog" class="control-label"></label>
                        <input type="file" asp-for="ImageBlog" class="form-control" />
                        <input type="hidden" value="@Model.ImageBlog"  name="fileadi" />
                        <span asp-validation-for="ImageBlog" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogId" class="control-label"></label>
                        <select asp-for="BlogId" class="form-control" asp-items="ViewBag.BlogId"></select>
                        <span asp-validation-for="BlogId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

</div>
</section>