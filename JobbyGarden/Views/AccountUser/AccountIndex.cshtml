<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>Atrio - Bootstrap 4 Admin Dashboard Template</title>
    <!-- Favicon-->
    <link rel="icon" href="~/panel/assets/images/favicon.ico" type="image/x-icon">
    <!-- Plugins Core Css -->
    <link href="~/panel/assets/css/app.min.css" rel="stylesheet">
    <!-- Custom Css -->
    <link href="~/panel/assets/css/style.css" rel="stylesheet" />
    <link href="~/panel/assets/css/pages/extra_pages.css" rel="stylesheet" />
</head>

<body class="dark">
    <div class="loginmain">
        <div class="loginCard">
            <div class="login-btn splits">
                <p>Already an user?</p>
                <button class="active">Login</button>
            </div>
            <div class="rgstr-btn splits">
                <p>Don't have an account?</p>
                <button>Register</button>
            </div>
            <div class="wrapper">
                
                <form id="login" tabindex="500" asp-controller="AccountUser" asp-action="Login">
                    <h3>Login</h3>
                    <div class="mail">
                        <input asp-for="Login.Email" type="email">
                        <label asp-for="Login.Email"></label>
                        <label>Mail or Username</label>
                    </div>
                    <div class="passwd">
                        <input  asp-for="Login.Password" type="password">
                        <label asp-for="Login.Password"></label>
                        <label>Password</label>
                    </div>
                    <div class="text-right p-t-8 p-b-31">
                        <a href="#">
                            Forgot password?
                        </a>
                    </div>
                    <div class="submit">
                        <button class="dark">Login</button>
                    </div>
                    <div class="flex-c p-b-112">
                        <a href="#" class="login100-social-item bg-fb">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="login100-social-item bg-twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="login100-social-item bg-google">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>
                </form>
                <form asp-controller="AccountUser" asp-action="Register" id="register" method="post" tabindex="502" enctype="multipart/form-data">
                    <h3>Register</h3>
                    <div class="name">
                        <input asp-for="Rester.Fullname" type="text">
                        <label>Full Name</label>
                    </div>
                    <div class="name">
                        <input asp-for="Rester.Usernames" type="text">
                        <label>Full Name</label>
                    </div>
                    <div class="mail">
                        <input asp-for="Rester.Email" type="email">
                        <label>Mail</label>
                    </div>
                    <div class="uid">
                        <input asp-for="Rester.Image" name="Image" type="file">
                        <label>Image</label>
                    </div>
                    <div class="passwd">
                        <input asp-for="Rester.Password" type="password">
                        <label>Password</label>
                    </div>
                    <div class="passwd">
                        <input asp-for="Rester.ConfirmPassword" type="password">
                        <label>Confirmpassword</label>
                    </div>
                    <div class="submit">
                        <button value="Register" class="dark">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Plugins Js -->
    <script src="~/panel/assets/js/app.min.js"></script>
    <!-- Extra page Js -->
    <script src="~/panel/assets/js/pages/examples/login-register.js"></script>
</body>


