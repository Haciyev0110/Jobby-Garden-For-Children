@model JobbyGarden.ViewModel.HomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">


    <!-- PAGE HEADING-->
    <section class="section page-heading js-parallax-scroll" style="background-image: url(/syte/images/bg-heading-03.jpg);">
        <div class="container">
            <div class="page-heading-inner">
                <div class="section-heading section-heading-1 section-heading-1--tiny text-left">
                    <h2 class="section-heading__title">Classes</h2>
                    <div class="section-heading__line">
                        <img src="~/syte/images/icon/line-blue-small.png" alt="Line" />
                    </div>
                </div>
                <nav class="au-breadcrumb">
                    <ul class="list-unstyled list-breadcrumb">
                        <li class="list-breadcrumb__item">
                            <a href="index.html">Home</a>
                        </li>
                        <li class="list-breadcrumb__item">Classes</li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
    <!-- END PAGE HEADING-->
    <!-- CLASSES-->
    <section class="section js-isotope-wrapper p-t-125 p-b-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <nav class="au-tab-2 m-b-50">
                        <ul style="width:100%" class="list-unstyled au-tab__nav au-tab__nav--sspace iostope-filter">
                            <li style="width:100%;text-align:center" class="active au-tab__nav-item" data-filter="*">
                                <span style="font-size:30px" class="au-tab__nav-item-inner">All classes</span>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="row isotope-content">

                @foreach (var item in Model.classroms)
                {
                    <div class="col-md-6 col-lg-4 isotope-item isotope-item-sizer play " data-filter="">
                        <div class="media media-our-class-3">
                            <div class="media__img">
                                <a asp-controller="SingleClas" asp-action="Index" asp-route-id="@item.Id">
                                    <img src="~/Librarry/Class/@item.Iamgename" alt="Color Matching Class" />
                                </a>
                                <span class="media-our-class__price">
                                    <span class="inner">$@item.Price</span>
                                </span>
                            </div>
                            <div class="media__body">
                                <h3 class="media__title">
                                    <a href="classes-single.html">@item.Name</a>
                                </h3>
                                <span class="date-time m-r-15">@item.Openhourse.ToString("HH mm") am - @item.Closehours.ToString("hh mm") pm</span>
                                <span class="date-time">@item.Startime.ToString("MMMMM d, yyyy").ToUpperInvariant()</span>
                                <div class="media-our-class__info">
                                    <div class="row no-gutters">
                                        <div class="col-6">
                                            <div class="item has-seprator">
                                                <span class="name">age</span>
                                                <span class="value">@item.Agee.Miniage - @item.Agee.Maxage years</span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="item">
                                                <span class="name">size</span>
                                                <span class="value">@item.Size seats</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>
            
        </div>
    </section>
    <!-- END CLASSES-->
    <!-- TEACHER-->
    <section class="section bg-pink-2 p-t-120 p-md-t-60 p-b-80">
        <div class="bg-cloud-2">
            <img src="~/syte/images/icon/bg-cloud-06.png" alt="Cloud 1">
        </div>
        <div class="bg-cloud-3">
            <img src="~/syte/images/icon/bg-cloud-07.png" alt="Cloud 2">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading section-heading-2">
                        <h2 class="section-heading__title">Our Teacher</h2>
                        <div class="section-heading__line">
                            <img src="~/syte/images/icon/line-white.png" alt="Line 2">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.teacherrs)
                {
                    <div class="col-lg-6">
                        <div class="media media-teacher-2">
                            <div class="media__img">
                                <a asp-controller="Teacherss" asp-action="Single" asp-route-id="@item.Id">
                                    <img src="~/Librarry/Teacher/@item.Images" alt="Rose Alexander" />
                                </a>
                            </div>
                            <div class="media__body">
                                <h4 class="media__title title title--sm title--black">
                                    <a href="teacher-single.html">@item.Fullname</a>
                                </h4>
                                <span class="media__desc">Managing Director</span>
                                <p class="media__text">@item.TitleDesc</p>
                                <div class="media__tool">
                                    <a class="au-icon au-icon-2" href="#">
                                        <i class="zmdi zmdi-facebook-box"></i>
                                    </a>
                                    <a class="au-icon au-icon-2" href="#">
                                        <i class="zmdi zmdi-twitter"></i>
                                    </a>
                                    <a class="au-icon au-icon-2" href="#">
                                        <i class="zmdi zmdi-instagram"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </section>
    <!-- END TEACHER-->
    <!-- FOOTER-->
    
    <!-- END FOOTER-->
</main>

