@model JobbyGarden.ViewModel.HomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN-->
<main id="main">


    <!-- PAGE HEADING-->
    <section class="section page-heading js-parallax-scroll" style="background-image: url('/syte/images/bg-heading-02.jpg');">
        <div class="container">
            <div class="page-heading-inner">
                <div class="section-heading section-heading-1 section-heading-1--tiny text-left">
                    <h2 class="section-heading__title">teacher</h2>
                    <div class="section-heading__line">
                        <img src="~/syte/images/icon/line-blue-small.png" alt="Line" />
                    </div>
                </div>
                <nav class="au-breadcrumb">
                    <ul class="list-unstyled list-breadcrumb">
                        <li class="list-breadcrumb__item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="list-breadcrumb__item">teacher</li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
    <!-- END PAGE HEADING-->
    <!-- OUR TEACHER-->
    <section class="section p-t-120 p-md-t-80 p-b-70">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading section-heading-1">
                        <h2 class="section-heading__title">Our Teacher</h2>
                        <div class="section-heading__line">
                            <img src="~/syte/images/icon/line-blue.png" alt="Line">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.teacherrs)
                {
                    <div class="col-lg-6">
                        <div class="media media-teacher-3">
                            <div class="media__img">
                                <a asp-controller="Teacherss" asp-action="Single" asp-route-id="@item.Id">
                                    <img src="~/Librarry/Teacher/@item.Images" alt="Rose Alexander" />
                                </a>
                            </div>
                            <div class="media__body">
                                <h4 class="media__title title title--sm title--black">
                                    <a asp-controller="Teacherss" asp-action="Single" asp-route-id="@item.Id" >@item.Fullname</a>
                                </h4>
                                <span class="media__desc">@item.Special</span>
                                <p class="media__text">@item.TitleDesc</p>
                                <div class="media__tool">
                                    <a class="au-icon au-icon-2" href="#">
                                        <i class="zmdi zmdi-facebook-box"></i>
                                    </a>
                                    <a class="au-icon au-icon-2" href="#">
                                        <i class="zmdi zmdi-twitter"></i>
                                    </a>
                                    <a class="au-icon au-icon-2" href="#">
                                        <i class="zmdi zmdi-instagram"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </section>
    <!-- END OUR TEACHER-->
    <!-- ENDROLL-->
    <section class="section bg-pink p-t-125 p-b-100">
        <div class="bg-cloud-6"></div>
        <img class="cloud-1 wow fadeInLeft" src="~/syte/images/icon/cloud-01.png" alt="Cloud 1" data-wow-delay=".3s">
        <img class="cloud-2 wow fadeInRight" src="~/syte/images/icon/cloud-02.png" alt="Cloud 2" data-wow-delay=".2s">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading section-heading-2">
                        <h2 class="section-heading__title">How to enroll your child</h2>
                        <div class="section-heading__line">
                            <img src="~/syte/images/icon/line-white.png" alt="Line 2">
                        </div>
                    </div>
                </div>
            </div>
            <form asp-controller="Teacherss" asp-action="Entrolls" class="js-contact-form"method="post">
                <div class="row">
                    <div class="col-md-6 p-r-10 p-md-r-15">
                        <input asp-for="entroll.Parentname" class="input-border-trans" type="text" placeholder="Parent's name"  required>
                    </div>
                    <div class="col-md-6 p-l-10 p-md-l-15">
                        <input asp-for="entroll.Waitinglist" class="input-border-trans" type="text" placeholder="Add us to the waiting list" >
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 p-r-10 p-md-r-15">
                        <input asp-for="entroll.Email" class="input-border-trans" type="email" placeholder="Email"  >
                    </div>
                    <div class="col-md-6 p-l-10 p-md-l-15">
                        <input asp-for="entroll.Phone" class="input-border-trans" type="text" placeholder="Phone"  required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <textarea asp-for="entroll.MessageTex" class="textarea-border-trans"  placeholder="Your message..." required></textarea>
                        <div class="text-center">
                            <button class="au-btn au-btn--blue" type="submit">
                                submit
                                <i class="zmdi zmdi-chevron-right"></i>
                                <i class="zmdi zmdi-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- END ENDROLL-->
</main>
<!-- END MAIN-->
